<p id="notice"><%= notice %></p>


  <h2 align="center">Title: <%= @article.title %></h2>
  <div class="well col-xs-offset-2">
    <h4>
      <strong>Description:</strong>
    </h4>
    <hr>
    <%= simple_format(@article.description) %>
    <div class="article-actions">
      <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-xs btn-default" %> 
      <%= link_to 'View articles', articles_path, class: "btn btn-xs btn-success" %>
      <%= link_to 'Delete article', article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    </div>
  </div>



